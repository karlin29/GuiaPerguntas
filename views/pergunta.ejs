<%- include ('partials/header.ejs'); %>
<body>
    <%- include ('partials/navbar.ejs'); %>
    <div class="container">
       <hr>
       <h1><%= pergunta.titulo %></h1>
       <br>
       <p><%= pergunta.descricao %></p>
       <hr>
       <form method="POST" action="/responder">
            <h3>Responda</h3>
            <textarea placeholder="Escreva sua resposta aqui..." class="form-control" name="corpo"></textarea>
            <br>
            <input type="hidden" name= "pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-success">Enviar Resposta</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <% }) %>
            
    </div>
    <%- include ('partials/footer.ejs'); %>
</body>
